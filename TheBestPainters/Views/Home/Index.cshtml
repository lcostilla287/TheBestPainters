@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid">
    <div class="row jumbotron text-center">
        <div class="col-12">
            @if (!User.Identity.IsAuthenticated)
            {
                <h1>The Best Painters</h1>
                <p class="lead">Look for the Rest, We'll Handle the Rest</p>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <h1 class="padding-top">The Best Painters</h1>
                <p class="lead light">Welcome Admin! What would you like to do?</p>
            }
        </div>
    </div>
</div>

<div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="container-fluid display">

            <div class="col-md-6">
                <div class="card">
                    <h2>Access your Customers</h2>
                    <p>@Html.ActionLink("Customers", "Index", "Customer", null, new { @class = "btn btn-primary btn-large" })</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <h2>Access Your Jobs</h2>
                    <p>@Html.ActionLink("Jobs", "Index", "Job", null, new { @class = "btn btn-primary btn-large" })</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <h2>Access Your Crews</h2>
                    <p>@Html.ActionLink("Crews", "Index", "Crew", null, new { @class = "btn btn-primary btn-large" })</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <h2>Materials</h2>
                    <p>@Html.ActionLink("Materials", "Index", "Material", null, new { @class = "btn btn-primary btn-large" })</p>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card">
                    <h2>Manage Employees</h2>
                    <p>@Html.ActionLink("Employees", "Index","Employee", null, new { @class = "btn btn-primary btn-large" })</p>
                </div>
            </div>
        </div>
    }
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="container-fluid display">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Contact Us</h2>
                        <p class="card-text">
                            Need something painted? Have any questions? Click below to contact the best service!
                        </p>
                        <p>@Html.ActionLink("Contact Us", "Contact", null, new { @class = "btn btn-primary btn-large" })</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Get to Know Us</h2>
                        <p class="card-text">
                            Who exactly are we? Click below to check us out!
                        </p>
                        <p>@Html.ActionLink("Learn More About Us", "About", null, new { @class = "btn btn-primary btn-large" })</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>